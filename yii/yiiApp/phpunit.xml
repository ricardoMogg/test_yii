<?xml version="1.0" encoding="UTF-8"?>

<phpunit bootstrap="protected/tests/bootstrap.php"
         backupGlobals="false"
         backupStaticAttributes="false"
         strict="true"
         verbose="true"  
          convertErrorsToExceptions="true"
          convertNoticesToExceptions="true" 
          convertWarningsToExceptions="true"
          stopOnFailure="false"
          timeoutForSmallTests="5">
  <testsuites>
    <testsuite name="Testing">
      <directory>protected/tests/functional</directory>
      <directory>protected/tests/unit</directory>
      <!--<directory suffix="Test.php">tests/application/end-to-end</directory>-->
    </testsuite>
  </testsuites>

  <logging>
    <log type="coverage-html" target="build/coverage" title="Test"
      charset="UTF-8" yui="true" highlight="true"
      lowUpperBound="35" highLowerBound="70"/>
    <log type="coverage-clover" target="build/logs/clover.xml"/>
    <log type="junit" target="build/logs/junit.xml"
      logIncompleteSkipped="false"/>
  </logging>

  <filter>
    <whitelist addUncoveredFilesFromWhitelist="true">
      <directory suffix=".php">protected</directory>
      <exclude>
        <file>protected/tests/autoload.php</file>
      </exclude>
    </whitelist>
  </filter>

  <selenium>
    <browser name="Firefox on localhost"
             browser="*chrome"
             host="localhost"
             port="4444"
             timeout="30000"/>
  </selenium>
</phpunit>
